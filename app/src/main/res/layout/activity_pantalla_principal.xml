<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".PantallaPrincipal"
    android:layout_margin="20dp"
    android:background="@color/md_theme_dark_onTertiary">
    <TextView
        android:id="@+id/tvtitulo1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="!Gracias por otorgar los permisos!"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:textSize="28dp"
        android:textAlignment="center"
        android:fontFamily="@font/pacificoregular"
        android:textColor="@color/md_theme_dark_tertiary"
        android:padding="5dp"
        />

    <ImageView
        android:layout_width="300dp"
        android:layout_height="500dp"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/tvtitulo1"
        android:layout_marginTop="20dp"
        android:src="@drawable/gato"
        />




</RelativeLayout>